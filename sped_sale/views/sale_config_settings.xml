<odoo>

    <record model="ir.ui.view" id="sale_config_settings_form_view">
        <field name="name">sale.config.settings.form (in sped_sale)</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale.view_sales_config"/>
        <field name="arch" type="xml">
            <field name="group_discount_per_so_line" position="after">
                <field name="group_discount_global" widget="radio" attrs="{'invisible':[('group_discount_per_so_line','=',0)]}"/>
                <field name="group_cumulative_discount_global" widget="radio" attrs="{'invisible':[('group_discount_per_so_line','=',0)]}"/>
            </field>
        </field>
    </record>

</odoo>
