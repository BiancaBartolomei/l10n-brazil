<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sped_documento_import_wizard" model="ir.ui.view">
        <field name="name">sped_documento_import_wizard</field>
        <field name="model">sped.documento.import</field>
        <field name="arch" type="xml">
            <form string="Importação de Documento Eletrônico"
                      version="7.0">
                <field invisible="1" name="state"/>
                <group>
                    <group>
                        <field name="edoc_input" filename="file_name"
                               colspan="2" required="1"/>
                        <field name="file_name" colspan="2" invisible="1"/>
                        <field name="nfe_id"/>
                        <field name="supplier_partner_id"/>
                        <field name="create_partner"
                               attrs="{ 'invisible': [( 'nfe_id', '!=' , False)] }"/>
                    </group>
                </group>
                <footer>
                    <button string="Importar" name="import_edoc"
                            type="object"
                            class="oe_highlight"/>
                    ou
                    <button string="Cancel" special="cancel" type="object"
                            class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sped_documento_import_wizard_action" model="ir.actions.act_window">
        <field name="name">Importar NF-e</field>
        <field name="res_model">sped.documento.import</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sped_documento_import_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_sped_documento_import_wizard"
        sequence="22"
        name="Importar NF-e"
        parent="sped.menu_sped_documento_emissao"
        action="sped_documento_import_wizard_action" />
</odoo>