<odoo>

    <record model="ir.ui.view" id="financeiro_estorno_cheque_form_view">
        <field name="name">financeiro.estorno.cheque.form (in l10n_br_financial)</field>
        <field name="model">financeiro.movimentacao.cheque</field>
        <field name="arch" type="xml">
            <form >
            <header>
                <button name="button_extornar_cheque" class="oe_highlight" type="object" string="Efetuar Depósito"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="button_ver_entradas" type="object" icon="fa-usd" >
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value"><field name="qtd_financeiro_moves_in"/></span>
                            <span class="o_stat_text">Entradas</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="button_ver_saidas" type="object" icon="fa-usd" >
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value"><field name="qtd_financeiro_moves_out"/></span>
                            <span class="o_stat_text">Saídas</span>
                        </div>
                    </button>
                </div>
                <div class="oe_title">
                    <h1><label style="font-size:20px" string="Depósito de Cheque" class="oe_edit_only"/></h1>
                </div>
                <group>
                    <group>
                        <field name="financial_account_id" />
                    </group>
                    <group>
                        <field name="data_deposito" />
                    </group>

                    <group colspan="4">
                        <field name="partner_bank_from_id" string="Caixa"/>
                        <field name="partner_bank_to_id" />
                    </group>
                </group>
                <group>
                        <field name="cheque_ids" domain="[('partner_bank_id', '=', partner_bank_from_id),('state', 'in', ['depositado'])]" required="True" />
                </group>
                <group>
                        <field name="financial_ids" invisible="1" />
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="financeiro_estorno_cheque_tree_view">
        <field name="name">financeiro.estorno.cheque.tree (in l10n_br_financial)</field>
        <field name="model">financeiro.movimentacao.cheque</field>
        <field name="arch" type="xml">
            <tree>
                <field name="cheque_ids" />
                <field name="partner_bank_from_id"/>
                <field name="partner_bank_to_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financeiro_cheque_estorno_act_window">
        <field name="name">estornos</field>
        <field name="res_model">financeiro.movimentacao.cheque</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type','=','estorno')]</field>
        <field name="context" >{'default_type': 'estorno'}</field>
        <field name="view_id" eval="financeiro_estorno_cheque_form_view"/>
    </record>
    <record model="ir.actions.act_window.view"
            id="financeiro_cheque_estorno_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="financeiro_estorno_cheque_form_view"/>
        <field name="act_window_id" ref="financeiro_cheque_estorno_act_window"/>
    </record>
    <record model="ir.actions.act_window.view"
            id="financeiro_cheque_estorno_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="financeiro_estorno_cheque_tree_view"/>
        <field name="act_window_id" ref="financeiro_cheque_estorno_act_window"/>
    </record>
    <record model="ir.ui.menu" id="estorno_cheque_menu">
        <field name="name">Estornos</field>
        <field name="parent_id" ref="financeiro_cheque_menu"/>
        <field name="action" ref="financeiro_cheque_estorno_act_window"/>
        <field name="sequence" eval="4"/>
    </record>

</odoo>
