<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="available_credit_limit_restriction_form" model="ir.ui.view">
        <field name="name">financial_move_credit_form</field>
        <field name="model">financial.move.create</field>
        <field name="inherit_id"
               ref="financial_create_form_view"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="replace">
                <field name="payment_term_id"
                       domain="[('domain', '=', payment_term_domain)]"/>
                <field name="payment_term_domain" invisible="1"/>
            </field>
            <!--<field name="payment_mode_id" position="replace">-->
                <field name="payment_mode_id"
                       domain="[('domain', '=', payment_mode_domain)]"/>
                <field name="payment_mode_domain" invisible="1"/>
            <!--</field>-->
        </field>
    </record>
</odoo>