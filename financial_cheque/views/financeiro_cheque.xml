<odoo>

    <record model="ir.ui.view" id="financeiro_cheque_form_view">
        <field name="name">financeiro.cheque.form (in l10n_br_financial)</field>
        <field name="model">financeiro.cheque</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_receber_cheque" class="oe_highlight" type="object" states="novo" string="Receber"/>
                    <button name="button_depositar_cheque" class="oe_highlight" type="object" states="recebido" string="Depositar"/>
                    <button name="button_repassar_cheque" class="oe_highlight" type="object" states="recebido" string="Repassar"/>
                    <button name="button_devolver_cheque_banco" class="oe_highlight" type="object" states="recebido" string="Devolvido pelo banco"/>
                    <button name="button_devolver_cheque_parceiro" class="oe_highlight" type="object" states="devolvido_b" string="Devolvido ao Parceiro"/>
                    <field name="state" widget="statusbar" statusbar_visible="novo,recebido,depositado,devolvido_b"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" invisible="True"/>
                        <field name="codigo"/>
                        <field name="participante_id" />

                        <group>
                            <field name="partner_bank_id" />
                        </group>
                        <group>
                            <field name="data_recebimento" />
                        </group>
                        <field name="empresa_id" />
                    </group>
                    <group>
                        <group>
                            <field name="titular" required="True"/>
                            <field name="banco_id" required="True"/>
                            <field name="agencia" required="True"/>
                            <field name="valor" required="True"/>
                        </group>
                        <group>
                            <field name="cpf_titular" required="True"/>
                            <field name="pre_datado"/>
                            <field name="conta" required="True"/>
                            <field name="numero_cheque" required="True"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <field name="financial_move_ids"/>
                    <field name="notes"/>
                </footer>
            </form>
        </field>
    </record>

