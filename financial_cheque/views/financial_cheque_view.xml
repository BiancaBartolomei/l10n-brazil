    <record model="ir.ui.view" id="financial_cheque_tree">
        <field name="name">financial.cheque.tree</field>
        <field name="model">financial.cheque</field>
        <field name="arch" type="xml">
            <tree>
                <field name="titular_nome"/>
                <field name="bank_id"/>
                <field name="agencia"/>
                <field name="conta"/>
                <field name="data_pre_datado"/>
                <field name="valor"/>
                <field name="participante_atual_id"/>
                <field name="partner_bank_atual_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financial_cheque_action">
        <field name="name">Cheque</field>
        <field name="res_model">financial.cheque</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="financial_tesouraria_cheque_menu">
        <field name="name">Cheques</field>
        <field name="parent_id" ref="financial.financial_top_menu"/>
        <field name="sequence" eval="16"/>
    </record>

    <record model="ir.ui.menu" id="financial_cheque_menu">
        <field name="name">Cheques</field>
        <field name="parent_id" ref="financial_tesouraria_cheque_menu"/>
        <field name="action" ref="financial_cheque_action"/>
        <field name="sequence" eval="1"/>
    </record>

</odoo>
