    <record model="ir.ui.view" id="financial_cheque_movimento_base_tree">
        <field name="name">financial_cheque_movimento.base.tree</field>
        <field name="model">financial.cheque.movimento</field>
        <field name="arch" type="xml">
            <tree>
                <field name="data_movimento" />
                <field name="cheque_ids" />
