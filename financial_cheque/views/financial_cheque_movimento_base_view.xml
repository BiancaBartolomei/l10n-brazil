    <record model="ir.actions.act_window" id="financial_cheque_movimento_base_action">
        <field name="name">Movimentação</field>
        <field name="res_model">financial.cheque.movimento</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="financial_cheque_movimento_base_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="financial_cheque_movimento_base_form"/>
        <field name="act_window_id" ref="financial_cheque_movimento_base_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="financial_cheque_movimento_base_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="financial_cheque_movimento_base_tree"/>
        <field name="act_window_id" ref="financial_cheque_movimento_base_action"/>
    </record>

    <record model="ir.ui.menu" id="financial_cheque_movimento_base_menu">
        <field name="name">Movimentação</field>
        <field name="parent_id" ref="financial_tesouraria_cheque_menu"/>
        <field name="action" ref="financial_cheque_movimento_base_action"/>
        <field name="sequence" eval="2"/>
